
<%= simple_form_for(@loan_management) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


  <div class="jumbotron"style="background-color: bisque">
    <div class="row"style="color: navy">
      <div class="col-sm-2">

        <div class="control-group">
          <div class ="controls">
            <%= f.association :loan_registration, collection: LoanRegistration.where(:active => true).order(:loan_reference),label_method: :loan_reference, prompt: "Choose a loan Ref.", label:"Loan Reference" %>
          </div>
        </div>
        <br>

        <%= f.input :payment_date %>
      </div>
      <div class="col-sm-6">
        <div class="form-inputs">
          <%= f.input :amount %>
          <%= f.input :note %>
          <%= f.input :user_id ,:as => :hidden, :input_html => { :value => current_user.id} %>
        </div>

      </div>
    </div>


  </div>



  <div class="form-actions">
    <%= f.button :submit, "Save" %>
  </div>
<% end %>
<br>
