<% provide(:title, "Person") %>
<p id="notice"><%= notice %></p>

<div class="breadcrumb"style="background-color: darkgreen;color: white">
  <h3><%= @person.fullname %>'s Profile [PN: <%=h @person_number %>]</h3>
</div>
<hr>
<div class="row">
  <div class="col-sm-4">
    <div class="breadcrumb">
      <table class="table table-striped"style="background-color: lightgoldenrodyellow;color: navy">
        <thead>
        <tr>
          <th>Created on</th>
          <th>Updated on</th>
          <th>Person Number</th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td><%=h @person.created_at.strftime("%d %b. %Y") %></td>
          <td><%=h @person.updated_at.strftime("%d %b. %Y") %></td>
          <td><%=h @person_number %></td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="jumbotron"style="background-color: lightgoldenrodyellow;color: navy">
      <table class="table table-striped">
        <thead>
        <tr>
          <th></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td>Full Name</td>
          <td><%= @person.fullname %> </td>
        </tr>
        <tr>
          <td>DoB</td>
          <td><%= @person.dob.strftime("%d %b. %Y") %></td>
        </tr>
        <tr>
          <td>PPSN</td>
          <td><%= @person.pps_number%></td>
        </tr>
        <tr>
          <td>Active</td>
          <td><%= @person.active.humanize%></td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<br>
<div class="breadcrumb"style="background-color: khaki">
  <% if  current_user.admin == true %>
  <%= link_to 'Edit', edit_person_path(@person), class:'fa fa-edit' %> |
    <% end %>
  <%= link_to 'Back', people_path, class:'fa fa-arrow-left' %>
</div>
<hr>


