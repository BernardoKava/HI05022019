<% provide(:title, "People ") %>
<p id="notice"><%= notice %></p>

<div class="breadcrumb"style="background-color: darkgreen;color: white">
  <h3>Home Occupants</h3>
</div>




<div class="jumbotron"style="background-color: lightgoldenrodyellow;color: navy">

  <table class="table table-hover">
    <thead>
    <tr>
      <th>Ref</th>
      <th>Name</th>
      <th>Surname</th>


      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= link_to person.id, person %></td>
        <td><%= link_to person.name, person %></td>
        <td><%= person.surname %></td>
        <td><%= link_to 'View', person, class: 'fa fa-eye' %></td>
        <% if  current_user.admin == true %>
        <td><%= link_to 'Edit', edit_person_path(person), class:'fa fa-edit' %></td>
        <td><%= link_to 'Delete', person, method: :delete, data: { confirm: 'Are you sure?' } , class:'fa fa-remove'%></td>
          <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>


  <br>
  <%= will_paginate @people %>
</div>


<% if  current_user.admin == true %>
<div class="breadcrumb"style="background-color: khaki">
  <%= link_to 'New Person', new_person_path , class:'fa fa-plus'%>
</div>

<% end %>