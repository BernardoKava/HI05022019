<% provide(:title, "View Budget") %>
<p id="notice"><%= notice %></p>



<div class="breadcrumb"style="background-color: darkgreen;color: white">
  <h3>Monthly Budget: <%= @budget.name %></h3>
</div>


<div class="breadcrumb" style="background-color: rgba(22,151,168,0.6); color: whitesmoke">
  <h4>A. Budget Details:</h4>
</div>



<div>
  <div class="row">
    <div class="col-sm-6">

      <div class="jumbotron"style="background-color: aliceblue;color: navy">
        <div class="breadcrumb" style="background-color: brown;color: white">
          <h5><strong> Budget Details</strong></h5>
        </div>

        <table class="table table-striped">
          <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <tr>
            <td>Month</td>
            <td><%= @budget.month %> </td>
          </tr>
          <tr>
            <td>Year</td>
            <td><%= @budget.year %></td>
          </tr>
          <tr>
            <td>Budget date</td>
            <td><%= @budget.budget_date.strftime("%d, %b  %Y") %></td>
          </tr>
          <tr>
            <td>Name</td>
            <td><%= @budget.name %></td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-sm-6">

      <div class="jumbotron"style="background-color: aliceblue;color: navy">
        <div class="breadcrumb" style="background-color: navy;color: white">
          <h5><strong> Budget Financial Summary</strong></h5>
        </div>
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Title</th>
            <th>Amount(€)</th>
            <th>Literal</th>
          </tr>
          </thead>

          <tbody>
          <tr>
            <td>Total Income (€)</td>
            <td>€ <%= @totalincome %> </td>
            <td><%= @totalincome.humanize %></td>
          </tr>
          <tr>
            <td>Total Expenses (€)</td>
            <td>€ <%= @totalexpense %> </td>
            <td><%= @totalexpense.humanize %></td>
          </tr>
          <tr>
            <td>Balance (€)</td>
            <td> € <%= @balance %></td>
            <td><%= @balance.humanize %></td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="breadcrumb"style="background-color: khaki">
  <% if current_user.admin == true %>
  <%= link_to 'Edit', edit_budget_path(@budget), class:'fa fa-edit' %> |
    <% end %>
  <%= link_to 'Back', budgets_path, class:'fa fa-arrow-left'  %>
</div>
<hr>

<div class="breadcrumb" style="background-color: rgba(22,151,168,0.6); color: whitesmoke">
  <h4>B. Income and Expenditure:</h4>
</div>

<div>
  <div class="row">
    <div class="col-sm-6">
      <div class="jumbotron"style="background-color: rgba(0,176,0,0.08);color: darkgreen">
        <div class="breadcrumb" style="background-color: brown;color: white">
          <h5><strong> Income</strong></h5>
        </div>

        <table class="table table-hover">
          <thead>
          <tr>
            <th>Date</th>
            <th>Details </th>
            <th>Flow Type</th>
            <th>Owner</th>
            <th>Amount(€)</th>
          </tr>
          </thead>

          <tbody>
          <% @incomes.each do |income| %>
            <tr>
              <td><%= income.created_at.strftime("%d %b. %Y")%>
              <td><%= income.details %></td>
              <td><%= income.inflowtype.name %></td>
              <td><%= income.person.fullname %></td>
              <td><%= income.amount %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="jumbotron"style="background-color: mistyrose;color: darkred">
        <div class="breadcrumb" style="background-color: navy;color: white">
          <h5><strong> Expenses</strong></h5>
        </div>

        <table class="table table-hover">
          <thead>
          <tr>
            <th>Date</th>
            <th>Details </th>
            <th>Flow Type </th>
            <th>Owner</th>
            <th>Amount(€)</th>
          </tr>
          </thead>

          <tbody>
          <% @expenses.each do |expense| %>
            <tr>
              <td><%= expense.created_at.strftime("%d %b. %Y")%>
              <td><%= expense.details %></td>
              <td><%= expense.outflowtype.name %></td>
              <td><%= expense.person.fullname %></td>
              <td><%= expense.amount %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="breadcrumb"style="background-color: khaki">
  <% if current_user.admin == true %>
    <%= link_to 'Edit', edit_budget_path(@budget), class:'fa fa-edit' %> |
  <% end %>
  <%= link_to 'Back', budgets_path, class:'fa fa-arrow-left'  %>
</div>
<hr>

<div class="jumbotron"style="background-color:bisque;color: navy">
  <div class="breadcrumb" style="background-color: brown;color: white">
    <h5><strong> Budget Financial Summary</strong></h5>
  </div>
  <table class="table table-striped"style="background-color: aliceblue">
    <thead>
    <tr>
      <th>Title</th>
      <th>Amount(€)</th>
      <th>Literal</th>
    </tr>
    </thead>

    <tbody>
    <tr>
      <td>Total Income (€)</td>
      <td>€ <%= @totalincome %> </td>
      <td><%= @totalincome.humanize %></td>
    </tr>
    <tr>
      <td>Total Expenses (€)</td>
      <td>€ <%= @totalexpense %> </td>
      <td><%= @totalexpense.humanize %></td>
    </tr>
    <tr>
      <td>Balance (€)</td>
      <td> € <%= @balance %></td>
      <td><%= @balance.humanize %></td>
    </tr>
    </tbody>
  </table>
</div>
<div class="breadcrumb" style="background-color: rgba(22,151,168,0.6); color: whitesmoke">
  <h4>C. Income and Expenditure Classification:</h4>
</div>





<div class="breadcrumb"style="background-color: khaki">
  <% if current_user.admin == true %>
    <%= link_to 'Edit', edit_budget_path(@budget), class:'fa fa-edit' %> |
  <% end %>
  <%= link_to 'Back', budgets_path, class:'fa fa-arrow-left'  %>
</div>
<hr>


<div class="breadcrumb" style="background-color: rgba(22,151,168,0.6); color: whitesmoke">
  <h4>D. Comments:</h4>
</div>

<div>

  <div>

    <% for comment in @budget.comments %>

      <div class="jumbotron"style="background-color: bisque;color: navy">

        <div>
          <strong>Comments:</strong><br><br>
          <textarea rows="4" cols="80" readonly> <%=h comment.commentary %> </textarea>
        </div>
        <br>
        <div>
          Commented on:
          <%=h comment.created_at.strftime("%d %b. %Y") %>
        </div>
        <div>
          ID:
          <%=h comment.id %>
        </div>

      </div>
    <% end %>

  </div>

</div>



<br>

<div class="breadcrumb"style="background-color: khaki">
  <% if current_user.admin == true %>
    <%= link_to 'Edit', edit_budget_path(@budget), class:'fa fa-edit' %> |
  <% end %>
  <%= link_to 'Back', budgets_path, class:'fa fa-arrow-left'  %>
</div>
<hr>

<div class="breadcrumb"style="background-color: darkgreen;color: white">
  <div>
    Created on:
    <%=h @budget.created_at.strftime("%d %b. %Y") %>
  </div>
  <br>
  <div>
    Updated on:
    <%=h @budget.updated_at.strftime("%d %b. %Y") %>
  </div>
  <br>
  <div>
    Budget Number:
    BN - <%=h @budget_number %>
  </div>
  <br>
</div>

