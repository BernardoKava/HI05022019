
<%= simple_form_for(@rule) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="jumbotron"style="background-color: lightgoldenrodyellow;color: navy">


      <div class="control-group">
        <div class ="controls">
          <%= f.association :rules_category, collection: RulesCategory.order(:name),label_method: :name, prompt: "Choose a Category", label:"Category" %>
        </div>
      </div>
      <br>

      <%= f.input :policy_code, value: @policy_code %>
      <%= f.input :title %>
      <%= f.input :definition %>
      <%= f.input :active %>
      <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id} %>
    </div>


  </div>

  <div class="form-actions">
    <%= f.button :submit,"Save" %>
  </div>
<% end %>
<br>