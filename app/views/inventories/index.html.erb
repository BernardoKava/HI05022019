<% provide(:title, "Inventories") %>
<p id="notice"><%= notice %></p>

<div class="breadcrumb"style="background-color: darkgreen;color: white">
  <h3>Inventories</h3>
</div>

<div class="jumbotron"style="background-color: lightgoldenrodyellow;color: navy">

  <table class="table table-hover">
    <thead>
    <tr>
      <th>Department</th>
      <th>Period from</th>
      <th>Period to</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= link_to inventory.department.name, inventory %></td>
        <td><%= inventory.period_from %></td>
        <td><%= inventory.period_to %></td>
        <td><%= link_to 'View', inventory ,class:'fa fa-eye'%></td>
        <% if  current_user.admin == true %>
        <td><%= link_to 'Edit', edit_inventory_path(inventory), class:'fa fa-edit' %></td>
        <td><%= link_to 'Delete', inventory, method: :delete, data: { confirm: 'Are you sure?' } , class:'fa fa-close'%></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= will_paginate @inventories %>
  <br>



</div>
<% if  current_user.admin == true %>

<div class="breadcrumb"style="background-color: khaki">
  <%= link_to 'New Inventory', new_inventory_path, class:'fa fa-plus' %>
</div>
<% end %>
