
<hr>


<div class="jumbotron"style="background-color: bisque;color: navy">
  <div class="nested-fields">



    <div class="field">
      <%= f.label  "Item:"  %>
      <%= f.text_field :item, class: 'form-control',placeholder:'Item Name...' %>
    </div>


    <div class="field">
      <%= f.label  "Description:"  %>
      <%= f.text_area :description, class: 'form-control' ,placeholder:'Description...'%>
    </div>

    <div class="field">
      <%= f.label  "Quantity:"  %>
      <%= f.text_field :quantity , class: 'form-control',placeholder:'Quantity...'%>
    </div>

    <div class="field">
      <%= f.label  "Value:"  %>
      <%= f.text_field :value, class: 'form-control',placeholder:'Value...' %>
    </div>

    <div class="field">
      <%= f.label  "Virtual:"  %>
      <%= f.check_box :virtual %>
    </div>

    <div class="breadcrumb"style="background-color: khaki">
      <%= link_to_remove_association 'Remove', f, class: 'fa fa-close', style:"font-size:15px;color:red"%>
    </div>
  </div>

</div>





