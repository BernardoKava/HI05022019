  <div class="jumbotron"style="background-color: palegoldenrod;color: navy">
    <div class="field">

      <%= f.hidden_field :user_id, class: 'form-control', value: current_user.id %>
    </div>

    <div class="field">
      <%= f.label  "Commentary:"  %>
