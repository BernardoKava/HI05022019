<% provide(:title, "Ledgers") %>
<p id="notice"><%= notice %></p>


<div class="breadcrumb"style="background-color: darkgreen;color: white">
  <h3>Ledgers</h3>
</div>

<div class="jumbotron"style="background-color: lightgoldenrodyellow">

  <table class="table table-hover"style="color: navy">
    <thead>
    <tr>
      <th>Month</th>
      <th>Year</th>
      <th>Ledger date</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @ledgers.each do |ledger| %>
      <tr>
        <td><%= link_to ledger.month, ledger %></td>
        <td><%= ledger.year %></td>
        <td><%= ledger.ledger_date %></td>
        <td><%= ledger.name %></td>
        <td><%= link_to 'View', ledger, class:'fa fa-eye' %></td>
        <% if current_user.admin == true %>
        <td><%= link_to 'Edit', edit_ledger_path(ledger), class:'fa fa-edit' %></td>
        <td><%= link_to 'Delete', ledger, method: :delete, data: { confirm: 'Are you sure?' }, class:'fa fa-remove' %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= will_paginate @ledgers %>
  <br>



</div>

<% if current_user.admin == true %>
<div class="breadcrumb"style="background-color: khaki">
<%= link_to 'New Ledger', new_ledger_path, class:'fa fa-plus'%>
</div>
<% end %>